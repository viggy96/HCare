<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.atomindustries.vignesh.hcare.AdviceActivity">

    <TextView android:id="@+id/main_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/advice_message"
        android:gravity="center"
        android:textSize="23sp"
        android:padding="3dp"
        />

    <Button android:id="@+id/symptoms_button"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_below="@id/main_message"
        android:text="Symptoms"
        android:textSize="23sp"
        android:drawableTop="@drawable/ic_pill"
        android:padding="32sp"
        android:onClick="openSymptomsActivity" />

    <Button android:id="@+id/image_button"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_below="@id/symptoms_button"
        android:text="Image"
        android:textSize="23sp"
        android:drawableTop="@drawable/ic_camera"
        android:padding="28sp"
        android:onClick="openImageAcvtivity" />

    <Button android:id="@+id/doctor_button"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_below="@id/image_button"
        android:text="Doctor"
        android:textSize="23sp"
        android:drawableTop="@drawable/ic_heart"
        android:padding="23dp"
        android:onClick="openDoctorActivity"
        />

</RelativeLayout>