<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.atomindustries.vignesh.hcare.TestActivity">


    <TextView android:id="@+id/main_message"
        android:text="@string/main_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@id/main_message">
        <Button android:id="@+id/eye_exam_button"
            android:layout_width="match_parent"
            android:layout_weight="0.333"
            android:layout_below="@id/main_message"
            android:text="Eye Exam"
            android:textSize="22sp"
            android:drawableTop="@drawable/ic_eye"
            android:padding="20dp"
            android:onClick="openEyeActivity"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/hearing_exam_button"
            android:layout_width="match_parent"
            android:layout_weight="0.333"
            android:layout_below="@id/eye_exam_button"
            android:text="Hearing Exam"
            android:textSize="22sp"
            android:drawableTop="@drawable/ic_ear"
            android:padding="23dp"
            android:onClick="openHearingActivity"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/concussion_exam_button"
            android:layout_width="match_parent"
            android:layout_weight="0.333"
            android:layout_below="@id/hearing_exam_button"
            android:text="Concussion Exam"
            android:textSize="22dp"
            android:drawableTop="@drawable/ic_head"
            android:padding="23dp"
            android:onClick="openConcussionActivity"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>